<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="80dp"
        android:background="@drawable/gray_circle"
        android:layout_height="80dp"
        android:id="@+id/relativeLayout2"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/activity_lock_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="@string/lock_getting_pass_txt"
        android:layout_marginTop="15dp"
        android:textColor="#6c6c6c"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/activity_lock_title"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/relativeLayout">

    <EditText
        android:id="@+id/activity_lock_pass_input"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:maxLines="1"
        android:background="@drawable/edit_text"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
         />

    </RelativeLayout>


    <Button
        android:id="@+id/activity_lock_submit"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginLeft="20dp"
        android:background="@drawable/red_rect"
        android:textColor="#ffffff"
        android:text="@string/submit_txt"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" />

    </RelativeLayout>

</ScrollView>